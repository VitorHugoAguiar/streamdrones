<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="media/logo/sentinela_symbol.svg">
    <!-- CSS only -->
    <link rel="stylesheet" href="bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="css/auth/auth.css">
</head>

<body>
    <div class="parent-container">
        <div class="container mt-4">
            <!-- Section: Design Block -->
            <section class="background-radial-gradient overflow-hidden">
                <img src="media/auth/gradiente.jpg">
                <div class="container px-4 py-5 px-md-5 text-center text-lg-start my-5">
                    <div class="row gx-lg-5 align-items-center mb-5">
                        <div class="col-lg-6 mb-5 mb-lg-0" style="z-index: 10">
                            <div class="text-center">
                                <!-- Wrap the image in a container with absolute positioning -->
                                <div style="position: relative;">
                                    <img src="media/logo//sentinela_white_principal.svg" class="img-fluid adjustable-image"
                                        style="position: absolute; margin-top:-10px; left: 50%; transform: translateX(-50%); max-width: 200px; height: auto;">
                                </div>
                            </div>
                            <!-- Add an empty div with height to increase distance -->
                            <div class="empty_div"></div>
                            <h1 class="my-5 display-5 fw-bold ls-tight h1-title" style="color: hsl(218, 81%, 95%)">
                                <span style="color: hsl(205, 74%, 65%)">Sentinela Atl√¢ntica</span><br />
                                Drones Stream
                            </h1>
                        </div>

                        <div class="col-lg-6 mb-5 mb-lg-0 position-relative register-top">
                            <div class="card bg-glass">
                                <div class="card-body px-4 py-3 px-md-5">
                                    <form action="/register" method="POST">
                                        <!-- 2 column grid layout with text inputs for the first and last names -->
                                        <div class="row">
                                            <% if (messages.error) { %>
                                                <div class="alert alert-danger">
                                                    <strong>
                                                        <%= messages.error %>
                                                    </strong>
                                                </div>
                                                <% } %>
                                                    <h1 class="mb-3 h3">Register</h1>
                                                    <div class="col-md-12 mb-4">
                                                        <div class="form-outline">
                                                            <label class="form-label" for="form3Example2">Name</label>
                                                            <input type="text" name="name" id="form3Example2"
                                                                class="form-control" value="<%= name %>" required />
                                                        </div>
                                                    </div>
                                        </div>

                                        <!-- Email input -->
                                        <div class="form-outline mb-4">
                                            <label class="form-label" for="form3Example3">Email Address</label>
                                            <input type="email" name="email" id="form3Example3" class="form-control"
                                                value="<%= email %>" required />
                                        </div>

                                        <!-- Password input -->
                                        <div class="form-outline mb-4">
                                            <label class="form-label" for="form3Example4">Password</label>
                                            <input type="password" name="password" id="form-password"
                                                class="form-control" required />
                                        </div>

                                        <!-- Password input -->
                                        <div class="form-outline mb-4">
                                            <label class="form-label" for="form3Example4">Confirm Password</label>
                                            <input type="password" name="password_confirm" id="form-confirm-password"
                                                class="form-control" required />
                                        </div>

                                        <!-- Submit button -->
                                        <button type="submit" class="btn btn-primary btn-block mb-4">Sign up</button>

                                        <!-- Register buttons -->
                                        <div class="text-center">
                                            <p>Already have an account? <a href="/login">Login</a></p>

                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!-- Section: Design Block -->
        </div>
    </div>
    <!-- JavaScript Bundle with Popper -->
    <script type="text/javascript" src="bootstrap/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="js/auth/register.js"></script>
</body>

</html>